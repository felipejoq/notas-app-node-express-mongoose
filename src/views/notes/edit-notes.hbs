<div class="row">
    <div class="col-6 mt-4 mx-auto">
        <div class="card">
            <h5 class="card-header">
                Editar nota
            </h5>
            <div class="card-body">

                <form action="/notes/edit-note/{{ nota._id }}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <input type="text" name="title" value="{{ nota.title }}" class="form-control" placeholder="Titulo"
                            autofocus>
                    </div>

                    <div class="form-group">
                        <textarea class="form-control" name="description" rows="5" placeholder="DescripciÃ³n">{{ nota.description }}</textarea>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            Editar
                        </button>
                    </div>
                </form>

            </div>
            <div class="card-footer text-muted">
                <small>{{ formatDate nota.date }}</small>
            </div>
        </div>
    </div>
</div>